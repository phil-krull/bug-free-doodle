<% if @book %>
  <h1><%= @book.title %></h1>
  <ul>
    <%= @book.author.name %>
  </ul>
  <ul>
    <%= @book.year %>
  </ul>
  <ul>
    <img src="<%= @book.image %>">
  </ul>
  <ul>
    <%= @book.description %>
  </ul>

  <% @book.messages.each do |message| %>
    <h3><%= message.user.first_name %> wrote: <%= message.content %></h3>
    <% if message.posts %>
      <% message.posts.each do |post| %>
        <ul>
          <%= post.user.first_name %>: <%= post.content %>
        </ul>
      <% end %>
    <% end %>
  <% end %>
<% end %>


